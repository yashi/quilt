# Read in library functions
if [ "$(type -t patch_file_name)" != function ]
then
	if ! [ -r @LIB@/patchfns ]
	then
		echo "Cannot read library @LIB@/patchfns" >&2
		exit 1
	fi
	. @LIB@/patchfns
fi

usage()
{
	echo "Usage: quilt series [-v]"
	if [ x$1 = x-h ]
	then
		cat <<EOF

Print the names of all patches in the file series.

-v	Verbose, more user friendly output
EOF
		exit 0
	else
		exit 1
	fi
}

cat_patches()
{
	local prefix=$1
	shift
	local patch

	for patch in "$@"
	do
		echo "$prefix$patch"
	done
}

options=`getopt -o vh -- "$@"`

if [ $? -ne 0 ]
then
	usage
fi

eval set -- "$options"

opt_what=here

while true
do
	case "$1" in
	-v)
		opt_verbose=1
		shift ;;
	-h)
		usage -h ;;
	--)
		shift
		break ;;
	esac
done

if [ $# -ne 0 ]
then
	usage
fi

if [ -n "$opt_verbose" ]
then
	top=$(top_patch)
	cat_patches "+ " $(patches_before $top)
	[ -n "$top" ] && cat_patches "= " $top
	cat_patches "  " $(patches_after $top)
else
	cat_series
fi
