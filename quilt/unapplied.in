# Read in library functions
if [ "$(type -t patch_file_name)" != function ]
then
	if ! [ -r $QUILT/scripts/patchfns ]
	then
		echo "Cannot read library $QUILT/scripts/patchfns" >&2
		exit 1
	fi
	. $QUILT/scripts/patchfns
fi

usage()
{
	printf $"Usage: quilt unapplied [patch]\n"
	if [ x$1 = x-h ]
	then
		printf $"
Print a list of patches that are not applied, or all patches that follow
the specified patch in the series file.
"
		exit 0
	else
		exit 1
	fi
}

options=`getopt -o h -- "$@"`

if [ $? -ne 0 ]
then
	usage
fi

eval set -- "$options"

while true
do
	case "$1" in
	-h)
		usage -h ;;
	--)
		shift
		break ;;
	esac
done

if [ $# -gt 1 ]
then
	usage
elif [ $# -eq 1 ]
then
	if ! patch=$(find_patch $1)
	then
		printf $"Patch %s is not in series\n" "$1" >&2
		exit 1
	fi
else
	patch=$(top_patch)
fi

if [ -z "$patch" ]
then
	cat_series
else
	patches_after $patch
fi \
| while read patch
do
	echo "$(print_patch $patch)"
done
